<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/layout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/grid"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/todo"
            android:onClick="dropin"
            android:tag="0"
            tools:ignore="ContentDescription,ImageContrastCheck,UsingOnClickInXml,DuplicateSpeakableTextCheck" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/todo"
            android:onClick="dropin"
            tools:ignore="UsingOnClickInXml"
            android:tag="1"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck,UsingOnClickInXml"
            android:onClick="dropin"
            android:tag="2"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:onClick="dropin"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription,UsingOnClickInXml"
            android:tag="3"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck,UsingOnClickInXml"
            android:onClick="dropin"
            android:tag="4"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck,UsingOnClickInXml"
            android:onClick="dropin"
            android:tag="5"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription,ImageContrastCheck,UsingOnClickInXml"
            android:onClick="dropin"
            android:tag="6"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/todo"
            android:onClick="dropin"
            tools:ignore="ImageContrastCheck,UsingOnClickInXml"
            android:tag="7"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription,UsingOnClickInXml"
            android:onClick="dropin"
            android:tag="8"/>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/winnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />

    <Button
        android:id="@+id/playagainbutton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:onClick="playAgain"
        android:text="Play Again"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>